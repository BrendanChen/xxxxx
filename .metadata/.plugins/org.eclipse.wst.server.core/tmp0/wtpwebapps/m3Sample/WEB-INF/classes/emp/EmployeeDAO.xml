<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.emp.data.dao.EmployeeDAO">

	<sql id="allColumns">
		empno,
		ename,
		job,
		hiredate,
		sal,
		comm,
		dname,
	</sql>


	<resultMap id="empResultMap" type="com.emp.model.EmpVO">
		<result property="empno" column="empno" />
		<result property="ename" column="ename" />
		<result property="hiredate" column="hiredate" />
		<result property="job" column="job" />
		<result property="sal" column="sal" />
		<result property="comm" column="comm" />
		<result property="deptno" column="deptno" />
	</resultMap>

	<!-- 用員工編號查詢 -->
	<select id="findByPrimaryKey" parameterType="com.emp.model.EmpVO"
		resultMap="empResultMap">
		select *
		from emp2
		where empno = #{empno}
	</select>

	<!-- 查詢所有員工 -->
	<select id="getAll" resultMap="empResultMap">
		select *
		from emp2
	</select>

	<!-- 新增員工 -->
	<insert id="insert" parameterType="com.emp.model.EmpVO"
		useGeneratedKeys="true" keyProperty="empno">

		<selectKey keyProperty="empno" resultType="int" order="BEFORE">
			SELECT emp2_seq.NEXTVAL FROM DUAL
		</selectKey>


		INSERT INTO emp2
		(
		empno,
		ename,
		job,
		hiredate,
		sal,
		comm,
		deptno
		)

		VALUES
		(
		#{empno},
		#{ename},
		#{job},
		#{hiredate},
		#{sal},
		#{comm},
		#{deptno}
		)
	</insert>

	<update id="update">
		update emp2 set
		empno = #{empno},
		ename = #{ename},
		job
		= #{job},
		hiredate = #{hiredate},
		sal = #{sal},
		comm = #{comm},
		deptno =
		#{deptno}
		where empno = #{empno}
	</update>

	<delete id="delete">
		delete from emp2 where empno = #{empno}
	</delete>

</mapper>